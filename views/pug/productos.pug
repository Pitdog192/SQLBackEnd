html 
    include layouts/head.pug
    body(class="container-fluid")
        a(class="btn btn-primary" href="/")="Formulario"
        div(class="row")
            if filtro
                div(class="card col-4" style="width: 18rem; margin: 5px;")
                    img(src=filtro.thumnail class="card-img-top" alt="Imagen del producto")
                    div(class="card-body")
                        h5(class="card-title")=filtro.title
                        p(class="card-text")=`$ ${filtro.price}`
            else if !productos
                h1= 'No hay productos'
            else
                each producto in productos
                    div(class="card col-4" style="width: 18rem; margin: 5px;")
                        img(src=producto.thumnail class="card-img-top" alt="Imagen del producto")
                        div(class="card-body")
                            h5(class="card-title")=producto.title
                            p(class="card-text")=`$ ${producto.price}`
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/ 3y       +gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")           
